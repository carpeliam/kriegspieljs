    "react-modal": "^3.1.10",
    "react-redux": "^5.0.2",
    "react-test-renderer": "^15.6.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.1",
