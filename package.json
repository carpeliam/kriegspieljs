{
  "author": "Liam Morley <liam@carpeliam.com> (http://www.carpeliam.com)",
  "name": "kriegspieljs",
  "description": "Kriegspiel Chess game",
  "license": "MIT",
  "version": "0.1.0",
  "scripts": {
    "journey": "concurrently -k 'yarn:start' 'wait-on http://localhost:8124 && jasmine spec/journey/*_spec.js'",
    "start": "node server.js",
    "test-client": "karma start --single-run",
    "test-server": "jasmine spec/lib/*_spec.js",
    "test": "npm run test-client && npm run test-server",
    "build": "webpack --progress --colors",
    "clean": "rimraf ./public/assets",
    "predeploy": "NODE_ENV=production yarn build",
    "deploy": "cf push kriegspiel -c 'npm start' -b nodejs_buildpack",
    "postdeploy": "yarn clean"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/carpeliam/kriegspieljs"
  },
  "engines": {
    "node": ">=7.0.0 <15.0.0"
  },
  "dependencies": {
    "connect": "3.3.5",
    "connect-logger": "0.0.1",
    "cookie": "^0.1.3",
    "express-session": "^1.11.3",
    "serve-static": "^1.10.0",
    "socket.io": "^2.0.4",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "classnames": "^2.2.5",
    "concurrently": "^5.3.0",
    "css-hot-loader": "^1.3.5",
    "css-loader": "^0.17.0",
    "enzyme": "^2.9.1",
    "expose-loader": "^0.7.0",
    "extract-text-webpack-plugin": "2.1.2",
    "jasmine": "^3.6.2",
    "jasmine-core": "^2.3.4",
    "jasmine-enzyme": "^3.8.3",
    "js-cookie": "^2.1.3",
    "karma": "^5.2.3",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "node-sass": "^7.0.0",
    "prop-types": "^15.6.0",
    "puppeteer": "^5.3.1",
    "react": "^15.4.2",
    "react-addons-perf": "^15.4.2",
